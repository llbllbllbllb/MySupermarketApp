<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <TextView
            android:id="@+id/orders_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/orders_date_and_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orders_total_price"
            android:text="Orders Date and Time"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"

            />
        <TextView
            android:id="@+id/orders_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orders_date_and_time"
            android:text="Orders State"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:lines="1"
            android:layout_marginRight="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/orders_state"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/orders_view_order_btn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="View Order"
                android:textAllCaps="false"
                android:background="@drawable/not_enhanced_btn_boarder"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <Button
                android:id="@+id/orders_cancel_order_btn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:background="@drawable/not_enhanced_btn_boarder_red"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                />

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>