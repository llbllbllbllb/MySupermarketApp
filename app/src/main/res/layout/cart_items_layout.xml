<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"


    app:cardElevation="20dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/outline_image_black_48dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/card_product_image"
            android:layout_marginLeft="0dp"
            android:layout_centerInParent="true">


            <TextView
                android:id="@+id/card_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"

                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/card_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_product_name"
                android:text="Product Price"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"

                />

            <TextView
                android:id="@+id/card_product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/card_product_price"
                android:layout_alignBaseline="@+id/card_product_price"
                android:text="1"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"

                />

            <TextView
                android:id="@+id/card_product_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_product_quantity"
                android:text="Subtotal"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"

                />



        </RelativeLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>